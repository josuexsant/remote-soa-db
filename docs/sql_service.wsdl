    </wsdl:message>
    <wsdl:message name="aggregateResponse">
        <wsdl:part name="parameters" element="tns:aggregateResponse"/>
    </wsdl:message>

    <!-- Definición de port types -->
    <wsdl:portType name="SQLServicePortType">
        <wsdl:operation name="listDatabases">
            <wsdl:input message="tns:listDatabasesRequest"/>
