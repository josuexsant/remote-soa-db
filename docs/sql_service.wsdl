                    </xsd:sequence>
                </xsd:complexType>
            </xsd:element>
            <xsd:element name="joinResponse" type="xsd:string"/>

            <!-- Tipo para aggregate -->
            <xsd:element name="aggregate">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="session_token" type="xsd:string"/>
                        <xsd:element name="database_name" type="xsd:string"/>
                        <xsd:element name="table_name" type="xsd:string"/>
                        <xsd:element name="operation" type="xsd:string"/>
                        <xsd:element name="field" type="xsd:string"/>
                        <xsd:element name="group_by" type="xsd:string" minOccurs="0"/>
                        <xsd:element name="where_json" type="xsd:string" minOccurs="0"/>
                    </xsd:sequence>
                </xsd:complexType>
            </xsd:element>
            <xsd:element name="aggregateResponse" type="xsd:string"/>
