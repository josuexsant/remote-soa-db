# SOA Database - Archivo de configuración de variables de entorno

# Configuración general
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8080

# Proxy
APP_HOST=app
APP_PORT=8080
ALLOWED_IPS=127.0.0.1,192.168.0.0/24

# Base de datos MySQL
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=rootpassword
MYSQL_DATABASE=dbservice

# Base de datos MongoDB
MONGO_URI=mongodb://root:rootpassword@mongodb:27017/

# OAuth2 - Google
OAUTH_GOOGLE_CLIENT_ID=tu_client_id_de_google
OAUTH_GOOGLE_CLIENT_SECRET=tu_client_secret_de_google

# OAuth2 - Facebook
OAUTH_FACEBOOK_CLIENT_ID=tu_client_id_de_facebook
OAUTH_FACEBOOK_CLIENT_SECRET=tu_client_secret_de_facebook

# OAuth2 - Microsoft
OAUTH_MICROSOFT_CLIENT_ID=tu_client_id_de_microsoft
OAUTH_MICROSOFT_CLIENT_SECRET=tu_client_secret_de_microsoft

# Configuración de seguridad
SESSION_DURATION_HOURS=24
TOKEN_SECRET_KEY=cambia_esta_clave_por_una_generada_aleatoriamente

# Configuración de logs
LOG_LEVEL=INFO

# Configuración de métricas
ENABLE_METRICS=true
METRICS_PORT=9090